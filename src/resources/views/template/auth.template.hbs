
{{#if user}}
<div id="notification-container" class="notification-container" >
    <div id="dropdownMenuButton" class="dropdown d-inline-block btn  mb-1" type="button" 
data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    
        <div class="notification-icon" style="position:relative">
            
            <div id="seenNotification" style="position: absolute;
                        top: -7px;
                        right: -10px;
                        border-radius: 50%;
                        width: 20px;
                        height: 20px;
                        padding: 1px;

                        background: var(--theme-color-1);
                       
                        color: #666;
                        text-align: center;" class="notification-number">{{user.seen}}</div>
            <svg style="display: block;" xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-bell" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path d="M10 5a2 2 0 0 1 4 0a7 7 0 0 1 4 6v3a4 4 0 0 0 2 3h-16a4 4 0 0 0 2 -3v-3a7 7 0 0 1 4 -6"></path>
                <path d="M9 17v1a3 3 0 0 0 6 0v-1"></path>
            </svg>
        </div>
   
        
        <div id="notification-box" class="dropdown-menu dropdown-menu-right mt-3" style="width:fit-content;"> </div>
    </div>
</div>

<div class="user-container">
{{!-- <a href="/users/logout" type="button" class="btn btn-background mb-1">Log out</a> --}}
    <div id="dropdownMenuButton" class="dropdown d-inline-block btn btn-outline mb-1" type="button" 
    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <div class="user">
            <avatar class="user__avatar">
                {{#unless user.avatar}}
                <img src="https://avatars.dicebear.com/api/human/{{user.name}}.svg" alt="{{user.name}} Profile Picture" width="23"
                    height="23">
                {{else}}
                <img src="{{user.avatar}}" alt="{{user.name}} Profile Picture" width="23" height="23">
                {{/unless}}
            </avatar>
            <name class="user__name">
                {{user.name}}
            </name>
        </div>
        <div class="dropdown-menu mt-3">
            {{#if (or
            (eq user.role "admin")
            (eq user.role "extraAdmin"))}}
            <a onclick="location = this.href" class="dropdown-item text-danger" href="/me/stored/comics/dashboard/admin">
            Admin Dashboard</a>
            {{/if}}
            <a onclick="location = this.href" class="dropdown-item" href="#">Account</a>
            <a onclick="location = this.href" class="dropdown-item" href="#">Features</a>
            <a onclick="location = this.href" class="dropdown-item" href="#">History</a>
            <a onclick="location = this.href" class="dropdown-item" href="#">Support</a>
            <a onclick="location = this.href" class="dropdown-item" href="/users/logout">Sign out</a>
        </div>
    </div>
</div>


{{else}}
<a href="/users/login" type="button" class="btn btn-background mb-1">Log in</a>
<a href="/users/register" type="button" class="btn btn-outline mb-1">Sign up</a>

{{/if}}